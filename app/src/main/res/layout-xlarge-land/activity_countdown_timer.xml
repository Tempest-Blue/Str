<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_countdown_timer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tempest_blue.str.CountdownTimer">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/start"
            android:id="@+id/background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/colorPrimary" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout3"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            android:textSize="100sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:text="00h00m00s"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="16dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_backspace"
            android:id="@+id/delete"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:id="@+id/gridLayout">

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="295dp"
            tools:layout_editor_absoluteX="38dp"
            android:id="@+id/button1"
            android:background="@android:color/transparent"
            android:textSize="100sp"
            android:layout_weight="1"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp" />

        <Space android:layout_height="wrap_content"
            android:layout_width="100dp" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:textSize="100sp"
            android:background="@android:color/transparent" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:textSize="100sp"
            android:background="@android:color/transparent"
            android:layout_row="1"
            android:layout_column="0" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp" />

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp"
            android:layout_row="2"
            android:layout_column="0" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp" />

        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"/>

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textSize="100sp"
            tools:layout_editor_absoluteY="544dp"
            tools:layout_editor_absoluteX="92dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginBottom="473dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </GridLayout>

    <RelativeLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="1283dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="727dp">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabMenu"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_fab_label="Choose an action"
            fab:fab_colorNormal="#DA4336"
            fab:fab_colorPressed="#E75043"
            fab:fab_colorRipple="#99FFFFFF"
            fab:fab_showShadow="true"
            fab:menu_labels_colorNormal="#333333"
            fab:menu_labels_colorPressed="#444444"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_position="left"
            fab:menu_openDirection="up"
            fab:fab_shadowColor="#66000000"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/startFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow"
                fab:fab_label="Start"
                fab:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/pauseFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause"
                fab:fab_label="Pause"
                fab:fab_size="mini"
                android:visibility="gone" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/resetFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reset"
                fab:fab_label="Reset"
                fab:fab_size="mini"
                android:visibility="gone" />

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
